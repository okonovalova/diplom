<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/job_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="OOO Рога и копыта"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"/>

    <ImageView
        android:id="@+id/job_link_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_open_link"
        app:layout_constraintStart_toEndOf="@id/job_name_textview"
        app:layout_constraintTop_toTopOf="@id/job_name_textview"
        app:layout_constraintBottom_toBottomOf="@id/job_name_textview"
        app:tint="@color/purple_500"
        android:layout_marginStart="16dp"/>

    <ImageView
        android:id="@+id/job_menu_imageview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_menu"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/position_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/job_name_textview"
        tools:text="Инженер"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/job_period_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbarSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/position_textview"
        tools:text="октябрь 2022 - декабрь 2022"
        android:layout_marginStart="16dp"
        android:paddingBottom="12dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>